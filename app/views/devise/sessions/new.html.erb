<div class="login-container">
  <h1>Teacher Login</h1>
  <%= form_with scope: :teacher, url: teacher_session_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email Address" %>
      <%= f.email_field :email, required: true, autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, required: true %>
    </div>

    <div class="form-actions">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="extra-links">
    <%= link_to "Sign up", new_teacher_registration_path %> |
    <%= link_to "Forgot your password?", new_teacher_password_path %>
  </div>
</div>
